<% provide :title, t(".title") %>
<div class="row">
  <%= render "users/slidebar_update" %>
  <div class="col-md-9">
    <h1><%= t ".title" %></h1>
    <% if @players.present? %>
      <div class="col-md-10 col-md-offset-1">
        <h4 class= "new-game">
          <%= link_to new_player_path  do %>
            <i class="fa fa-plus-square"></i>
            <%= t ".add" %>
          <% end %>
        </h4>
        <table class="table table-striped table-bordered" id="player-list">
          <thead>
            <th><%= t ".game" %></th>
            <th><%= t ".rank" %></th>
            <th></th>
          </thead>
          <tbody>
            <% @players.each do |player| %>
              <tr class="game-rank">
                <td><%= player.game.game %></td>
                <td><%= player.rank.rank %></td>
                <td class="text-center">
                  <%= link_to edit_player_path(player) do %>
                  <i class="fa fa-edit"></i>
                  <% end %>
                  <%= link_to player_path(player), method: :delete,
                    data: {confirm: t(".confirm")} do %>
                    <i class="fa fa-trash"></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <%= t ".need" %>
      <%= link_to t(".title"), new_player_path %>
    <% end %>
  </div>
</div>
