<% provide :title, @user.name %>

<div class="col-md-12" id="user_profile_show">
  <div class="row">
    <div class="col-sm-2 col-md-2 fixed">
      <%= image_tag get_image(@user_profile), class: "img-rounded img-responsive", id:"img_user" %>  
    </div>
    <div class="col-sm-7 col-md-7">
      <h5>
        <div class="row">
          <div class="row">
            <h1 class="col-md-5 col-md-offset-1" id="show_name"><%= @user.name %></h1>
            <div class="col-md-4 col-md-offset-1" id="show_follow">
              <%= render "follow_form" if logged_in? %>
            </div>
          </div>    
          
          <div class="row">
            <div class="col-sm-10 col-md-offset-1">
            <small>
              <h5><%= @user_profile.address %> <i class="glyphicon glyphicon-map-marker"></i> </h5>
            </small> 
            <p> 
              <i class="glyphicon glyphicon-user"></i> <%= @user_profile.gender %>
              <br/>
              <i class="glyphicon glyphicon-gift"></i> <%= @user_profile.age %>
              <br/>
              <i class="glyphicon glyphicon-king"></i> <%= @user_profile.game %>
              <br/>
              <i class="glyphicon glyphicon-arrow-up"></i> <%= @user_profile.rank %>
              <br/>
              <i class="glyphicon glyphicon-euro"></i> <%= @user_profile.hourly_rent %>
              <br/>
            </p>
          </div>
        </div>
      </h5>

      <div class="row bootstrap snippets">
        <div class="col-md-12 col-sm-12">
            <div class="comment-wrapper ">
              <div class="panel panel-primary"> <div class="panel-heading">
                <h4><%= t ".comment" %></h4>
              </div>
              <div class="panel-body">
                <%= render "comments/form" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-sm-3" id="show_order">
      <%= render "orders/new" if logged_in? %>
    </div>
  </div>
</div>
